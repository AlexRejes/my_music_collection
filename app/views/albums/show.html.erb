<p>
  <strong>Name:</strong>
  <%= @album.name %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @artist_name %>
</p>

<p>
  <strong>Year:</strong>
  <%= @album.year %>
</p>

<div>
  <%= link_to "Edit this album", edit_album_path(@album) %> |
  <%= link_to "Back to albums", albums_path %>
  <% if current_user.admin? %>
  <%= button_to "Destroy this album", @album, method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
</div>
